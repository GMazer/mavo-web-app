{
  "name": "lumina-backend-worker",
  "version": "1.0.0",
  "description": "Backend API for Mavo Fashion (Cloudflare Worker)",
  "scripts": {
    "dev": "wrangler dev src/app.ts",
    "deploy": "wrangler deploy --minify src/app.ts",
    "db:create": "wrangler d1 create mavo-db",
    "db:setup": "wrangler d1 execute mavo-db --local --file=./schema.sql",
    "db:setup:prod": "wrangler d1 execute mavo-db --remote --file=./schema.sql"
  },
  "dependencies": {
    "hono": "^4.1.0",
    "aws4fetch": "^1.0.17"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "wrangler": "^3.30.1",
    "typescript": "^5.3.3"
  }
}